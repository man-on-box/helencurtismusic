---
import Layout from "./Layout.astro";
import Sidenav from "./Sidenav.astro";
import Surface from "../components/Surface.astro";
import Banner from "../components/HeroBanner.astro";

interface Props {
  title: string;
  hero: {
    heading: string;
    subheading?: string;
    imgSrc: string;
    imgAlt: string;
    imgWidth: number;
    imgHeight: number;
  };
  showSideNav?: boolean;
}

const { title, hero, showSideNav = true } = Astro.props;
---

<Layout title={title}>
  <div class="flex justify-center bg-emerald-200 bg-opacity-50">
    <Banner
      heading={hero.heading}
      subheading={hero.subheading}
      imgSrc={hero.imgSrc}
      imgAlt={hero.imgAlt}
      imgWidth={hero.imgWidth}
      imgHeight={hero.imgHeight}
    />
  </div>
  <div class="container mx-auto my-20 px-5">
    <div class="flex justify-center gap-8">
      {showSideNav && <Sidenav />}
      <Surface class="max-w-4xl grow">
        <slot />
      </Surface>
    </div>
  </div>
</Layout>
