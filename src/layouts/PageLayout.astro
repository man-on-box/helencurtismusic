---
import Layout from "./Layout.astro";
import Sidenav from "./Sidenav.astro";
import Surface from "../components/Surface.astro";
import Banner from "../components/HeroBanner.astro";
import type { Props as BannerProps } from "../components/HeroBanner.astro";

interface Props {
  title: string;
  banner: BannerProps;
  showSideNav?: boolean;
}

const { title, banner, showSideNav = true } = Astro.props;
---

<Layout title={title}>
  <div class="flex justify-center bg-emerald-200 bg-opacity-50">
    <Banner
      heading={banner.heading}
      subheading={banner.subheading}
      imgSrc={banner.imgSrc}
      imgAlt={banner.imgAlt}
      imgWidth={banner.imgWidth}
      imgHeight={banner.imgHeight}
    />
  </div>
  <div class="container mx-auto my-20 px-5">
    <div class="flex justify-center gap-8">
      {showSideNav && <Sidenav />}
      <Surface class="max-w-4xl grow">
        <slot />
      </Surface>
    </div>
  </div>
</Layout>
