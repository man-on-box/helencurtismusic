---
import { getEntry } from "astro:content";
import PageLayout from "../layouts/PageLayout.astro";
import headerImage from "../assets/images/helen-samba-730-730.webp";

const { data, render } = await getEntry("pages", "tuition");
const { Content } = await render();
---

<PageLayout
  title={data.heading}
  banner={{
    heading: data.heading,
    imgSrc: headerImage,
    imgAlt: "Samaba performance",
    imgWidth: 400,
    imgHeight: 400,
  }}
>
  <article class="prose">
    <Content />
  </article>
</PageLayout>
