---
import { getEntry } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Surface from "../components/Surface.astro";
import Banner from "../components/HeroBanner.astro";

const { data, render } = await getEntry("pages", "home");
const { Content } = await render();
---

<Layout title="Home">
  <div class="container mx-auto">
    <div class="grid grid-cols-6">
      <div class="col-span-6 md:col-start-1 lg:col-start-2">
        <Banner
          heading={data.heading}
          subheading={data.subheading}
          imgSrc="/images/helen-at-piano.webp"
          imgAlt="Helen Curtis Music logo"
          imgWidth={350}
          imgHeight={312}
        />
      </div>
      <div class="col-span-6 lg:col-span-4 md:col-start-2 lg:col-start-3">
        <Surface class="prose">
          <article>
            <Content />
          </article>
        </Surface>
      </div>
    </div>
  </div>
</Layout>
