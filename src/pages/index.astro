---
import { getEntry } from "astro:content";
import PageLayout from "../layouts/PageLayout.astro";
import headerImage from "../assets/images/helen-at-piano.webp";

const { data, render } = await getEntry("pages", "home");
const { Content } = await render();
---

<PageLayout
  title="Home"
  banner={{
    heading: data.heading,
    subheading: data.subheading,
    imgSrc: headerImage,
    imgAlt: "Helen Curtis Music logo",
    imgWidth: 350,
    imgHeight: 312,
  }}
>
  <article class="prose">
    <Content />
  </article>
</PageLayout>
