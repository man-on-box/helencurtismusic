---
import { getEntry } from "astro:content";
import PageLayout from "../layouts/PageLayout.astro";

const { data, render } = await getEntry("pages", "events");
const { Content } = await render();
---

<PageLayout
  title={data.heading}
  hero={{
    heading: data.heading,
    subheading: data.subheading,
    imgSrc: "/images/singing-outside-616-616.webp",
    imgAlt: "Singing event outside",
    imgWidth: 350,
    imgHeight: 350,
  }}
>
  <article class="prose">
    <Content />
  </article>
</PageLayout>
