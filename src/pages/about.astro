---
import { getEntry } from "astro:content";
import PageLayout from "../layouts/PageLayout.astro";

const { data, render } = await getEntry("pages", "about");
const { Content } = await render();
---

<PageLayout
  title={data.heading}
  hero={{
    heading: data.heading,
    subheading: data.subheading,
    imgSrc: "/images/helen-about.webp",
    imgAlt: "Helen Curtis",
    imgWidth: 400,
    imgHeight: 439,
  }}
>
  <article class="prose">
    <Content />
  </article>
</PageLayout>
