---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

export interface Props {
  heading: string;
  subheading?: string;
  imgSrc: ImageMetadata;
  imgAlt: string;
  imgWidth: number;
  imgHeight: number;
}

const { props } = Astro;
---

<div class="mx-10 my-10 max-w-4xl items-center gap-9 md:my-20 lg:flex">
  <Image
    class="mx-auto mb-5 rounded-3xl shadow-lg lg:mb-0"
    src={props.imgSrc}
    alt={props.imgAlt}
    width={props.imgWidth}
    height={props.imgHeight}
    loading="eager"
  />
  <div class="text-center lg:text-left">
    <h1
      class="inline text-5xl font-extrabold tracking-tight md:text-7xl lg:text-8xl"
    >
      {props.heading}
    </h1>
    <slot />
    {
      props.subheading && (
        <h2 class="my-3 text-2xl font-semibold tracking-tight text-slate-600">
          {props.subheading}
        </h2>
      )
    }
  </div>
</div>
